                    <StackPanel DataContext="{Binding BrandField}" Margin="0,0,10,10" MaxWidth="500" MinWidth="300">
                        <TextBlock FontSize="14" Foreground="{StaticResource AccentColorBrush}" Text="БРЕНД" Padding="5"/>
                        <Grid Margin="0,3">
                            <Grid.ColumnDefinitions>
