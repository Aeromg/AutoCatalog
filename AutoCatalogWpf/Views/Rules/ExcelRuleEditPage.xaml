                        <Grid Margin="0,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Номер колонки:" HorizontalAlignment="Right" />
                            <TextBox Grid.Column="1" Margin="8,0,0,0"
