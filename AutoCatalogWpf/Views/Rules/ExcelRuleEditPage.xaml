                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Пропуск строк:" HorizontalAlignment="Right" Foreground="{StaticResource GrayBrush2}"/>
